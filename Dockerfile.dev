# Development Dockerfile for Takash
FROM node:20-bullseye

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Create non-root user
RUN groupadd -r node && useradd -r -g node node || true
RUN chown -R node:node /workspace

# Switch to node user
USER node

# Copy package files
COPY --chown=node:node package*.json ./

# Install dependencies (will be done in postCreateCommand, but added here for caching)
# RUN npm install

# Expose Next.js port
EXPOSE 3000

# Default command (overridden by devcontainer)
CMD ["npm", "run", "dev"]
